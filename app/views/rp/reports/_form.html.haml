= form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :state
    %br/
    = f.text_field :state
  .field
    = f.label :started_at
    %br/
    = f.datetime_select :started_at
  .field
    = f.label :finished_at
    %br/
    = f.datetime_select :finished_at
  .field
    = f.label :line_count
    %br/
    = f.text_field :line_count
  .field
    = f.label :file_name
    %br/
    = f.text_field :file_name
  .field
    = f.label :file_path
    %br/
    = f.text_field :file_path
  .actions
    = f.submit 'Save'
