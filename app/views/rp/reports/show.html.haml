%p#notice= notice
%p
  %strong Name:
  = @report.name
%p
  %strong State:
  = @report.state
%p
  %strong Started at:
  = @report.started_at
%p
  %strong Finished at:
  = @report.finished_at
%p
  %strong Line count:
  = @report.line_count
%p
  %strong File name:
  = @report.file_name
%p
  %strong File path:
  = @report.file_path
= link_to 'Edit', edit_report_path(@report)
|
#{link_to 'Back', reports_path}
%table
  %thead
    %tr
      %th Name
      %th State
      %th Started at
      %th Finished at
      %th Line count
      %th File name
      %th File path
      %th{:colspan => "3"}
  %tbody
    - @reports.each do |report|
      %tr
        %td= report.name
        %td= report.state
        %td= report.started_at
        %td= report.finished_at
        %td= report.line_count
        %td= report.file_name
        %td= report.file_path
        %td= link_to 'Show', report
        %td= link_to 'Edit', edit_report_path(report)
        %td= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }
