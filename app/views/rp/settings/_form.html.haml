= form_for @setting do |f|
  - if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setup from being saved:"
      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :scheme
    %br/
    = f.text_field :scheme
  .field
    = f.label :host
    %br/
    = f.text_field :host
  .field
    = f.label :username
    %br/
    = f.text_field :username
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .field
    = f.label :virtual_path
    %br/
    = f.text_field :virtual_path
  .actions
    = f.submit 'Save'
    = link_to 'Back', settings_path
