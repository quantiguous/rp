= form_for @setting, html: {class:'rp-form-horizontal'} do |f|
  - if @setting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@setting.errors.count, "error")} prohibited this setup from being saved:"
      %ul
        - @setting.errors.full_messages.each do |msg|
          %li= msg
  .rp-control-group
    = f.label :scheme, class: 'rp-control-label'
    = f.text_field :scheme
  .rp-control-group
    = f.label :host, class: 'rp-control-label'
    = f.text_field :host
  .rp-control-group
    = f.label :username, class: 'rp-control-label'
    = f.text_field :username
  .rp-control-group
    = f.label :password, class: 'rp-control-label'
    = f.password_field :password
  .rp-control-group
    = f.label :virtual_path, class: 'rp-control-label'
    = f.text_field :virtual_path
  .actions
    = f.submit 'Save', class: "rp-btn rp-btn-primary"
    = link_to 'Cancel', settings_path, class: "rp-btn"
